# Docker Compose ---------------------------------------------------------------------
# Disable an absolutely horrible docker-compose CLI menu.
# https://github.com/docker/for-win/issues/14021
COMPOSE_MENU=0

# Disable Docker BuildKit which causes build issues, e.g. caching problems
# DOCKER_BUILDKIT=0


# General ----------------------------------------------------------------------------
DOMAIN_NAME={{DOMAIN_NAME}}
CERTIFICATE_VALIDATION_EMAIL={{CERTIFICATE_EMAIL}}


# Pulumi -----------------------------------------------------------------------------
STAGE={{STAGE}}
ORG_NAME={{ORG_NAME}}
ENVIRONMENT={{ENVIRONMENT}}
STATE_STORAGE_URL={{STATE_STORAGE_URL}}
PULUMI_CONFIG_PASSPHRASE=""
HOSTED_ZONE_DNS_ROLE_ARN="{{HOSTED_ZONE_DNS_ROLE_ARN}}"


# AWS --------------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_PROFILE={{AWS_PROFILE}}
HOSTED_ZONE_NAME={{HOSTED_ZONE_NAME}}
AWS_ROUTE53_HOSTED_ZONE_ID=""    # Empty means that there's no existing hosted zone which would trigger creation of new hosted zone with `HOSTED_ZONE_NAME` name.
AWS_ROUTE53_PARENT_HOSTED_ZONE_ID={{AWS_ROUTE53_PARENT_HOSTED_ZONE_ID}}
DYNAMODB_ENDPOINT={{DYNAMODB_ENDPOINT}}


# NATS config
NATS_SERVERS="tls://lixpi-nats-1:4222, tls://lixpi-nats-2:4222, tls://lixpi-nats-3:4222"
NATS_DEBUG_MODE={{NATS_DEBUG_MODE}}
NATS_TRACE_MODE=false
NATS_AUTH_ACCOUNT=AUTH    # Defined in nats server config
NATS_SYS_USER_PASSWORD="{{NATS_SYS_USER_PASSWORD}}"
NATS_REGULAR_USER_PASSWORD="{{NATS_REGULAR_USER_PASSWORD}}"
# Can be generated by running `nsc generate nkey --account`
NATS_AUTH_NKEY_ISSUER_SEED={{NATS_AUTH_NKEY_SEED}}
NATS_AUTH_NKEY_ISSUER_PUBLIC={{NATS_AUTH_NKEY_PUBLIC}}
# Can be generated by running `nsc generate nkey --curve`
NATS_AUTH_XKEY_ISSUER_SEED={{NATS_AUTH_XKEY_SEED}}
NATS_AUTH_XKEY_ISSUER_PUBLIC={{NATS_AUTH_XKEY_PUBLIC}}
# LLM Service NKey - Used by llm-api service to sign self-issued JWTs
NATS_LLM_SERVICE_NKEY_SEED={{NATS_LLM_SERVICE_NKEY_SEED}}
NATS_LLM_SERVICE_NKEY_PUBLIC={{NATS_LLM_SERVICE_NKEY_PUBLIC}}
# WebSocket CORS configuration{{NATS_CORS_COMMENT}}
NATS_SAME_ORIGIN=false
NATS_ALLOWED_ORIGINS=[]


# API ---------------------------------------------------------------------------------

# App host addresses
ORIGIN_HOST_URL={{ORIGIN_HOST_URL}}
API_HOST_URL={{API_HOST_URL}}

# Auth0 config
AUTH0_DOMAIN={{AUTH0_DOMAIN}}
AUTH0_API_IDENTIFIER={{AUTH0_AUDIENCE}}

# LocalAuth0 mock config (used when VITE_MOCK_AUTH=true)
MOCK_AUTH0={{MOCK_AUTH0}}
MOCK_AUTH0_DOMAIN={{MOCK_AUTH0_DOMAIN}}
MOCK_AUTH0_JWKS_URI={{MOCK_AUTH0_JWKS_URI}}

# AI config
SAVE_LLM_RESPONSES_TO_DEBUG_DIR={{SAVE_LLM_RESPONSES_TO_DEBUG_DIR}}
# OpenAI
OPENAI_API_KEY={{OPENAI_API_KEY}}
# Anthropic
ANTHROPIC_API_KEY={{ANTHROPIC_API_KEY}}



# Web UI -------------------------------------------------------------------------------
VITE_MOCK_AUTH={{VITE_MOCK_AUTH}}
VITE_MOCK_AUTH0_DOMAIN={{VITE_MOCK_AUTH0_DOMAIN}}
VITE_API_URL={{VITE_API_URL}}
VITE_AUTH0_LOGIN_URL={{VITE_AUTH0_LOGIN_URL}}
VITE_AUTH0_DOMAIN={{VITE_AUTH0_DOMAIN}}
VITE_AUTH0_CLIENT_ID={{VITE_AUTH0_CLIENT_ID}}
VITE_AUTH0_AUDIENCE={{VITE_AUTH0_AUDIENCE}}
VITE_AUTH0_REDIRECT_URI={{VITE_AUTH0_REDIRECT_URI}}
VITE_STRIPE_PUBLIC_KEY={{VITE_STRIPE_PUBLIC_KEY}}
VITE_NATS_SERVER="{{VITE_NATS_SERVER}}"
